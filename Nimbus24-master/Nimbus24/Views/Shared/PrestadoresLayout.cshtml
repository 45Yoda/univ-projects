

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title -Made by bit_Bear</title>
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
    </head>
    <body style="background-color: beige; font-family: Verdana, Arial;">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>


                </div>

            </div>
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        @Html.ActionLink("Nimbus24", "Index", "Home", null, new { @class = "navbar-brand" })


                    </div>
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <img src="~/Images/logo.png" alt="Avatar" style="margin-right: 15px;" />
                            <li>@Html.ActionLink("Perfil","Perfil","Prestadors")</li>
                            <li>@Html.ActionLink("Terminar Sessão", "Logout", "Clientes")</li>
                        </ul>
                    </div>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Histórico", "Historico", "Prestadors")</li>
                        <li>@Html.ActionLink("Sobre Nós", "About", "Home")</li>
                        <li>@Html.ActionLink("Contactos", "Contacts", "Home")</li>
                    </ul>

                </div>
            </nav>

        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>
                    &copy; @DateTime.Now.Year - Made by <b>bit_Bear</b>
                    <img src="~/Images/bit.png" style="width:3%" align="right" />
                </p>
            </footer>
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>